<Window x:Class="HMI_Application.Dialog_box.LogOn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMI_Application.Dialog_box"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="LogOn" Height="200" Width="380">
    <Grid>
        <StackPanel Orientation="Vertical" Width="350">
            <DockPanel Margin="10">
                <TextBlock Text="用户:" FontSize="25"></TextBlock>
                <TextBox x:Name="text_user" Text="admin" FontSize="25" ></TextBox>
            </DockPanel>

            <DockPanel Margin="10">
                <TextBlock Text="密码:" FontSize="25"></TextBlock>
                <PasswordBox x:Name="passwordbos" d:Password="123" FontSize="25" ></PasswordBox>
            </DockPanel>

            <DockPanel Margin="10">
                <Button DockPanel.Dock="Left" Content="登录" FontSize="25" Width="80" Click="Button_Click"></Button>

                <Button  DockPanel.Dock="Right" Content="退出" FontSize="25" Width="80" Click="Button_Click_1"></Button>

                <Border></Border>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
