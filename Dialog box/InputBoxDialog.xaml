<Window x:Class="HMI_Application.Dialog_box.InputBoxDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMI_Application.Dialog_box"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="InputBoxDialog" Height="auto" Width="auto">
    <StackPanel Orientation="Horizontal" >
        <TextBox x:Name="inputTextBox" MinWidth="400" d:Text="123"  FontSize="25"      Margin="3"
                  HorizontalAlignment="Stretch" VerticalAlignment="Center" TextAlignment="Left" 
                  KeyDown="inputTextBox_KeyDown"/>
        <Button x:Name="okButton" Content="确定"     Height="35"  FontSize="16"   Width="80" Margin="3" Click="okButton_Click"/>
        <Button x:Name="cancelButton" Content="取消" Height="35" FontSize="16"  Width="80" Margin="3" Click="cancelButton_Click"/>
    </StackPanel>
</Window>
