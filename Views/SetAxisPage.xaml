<Page x:Class="HMI_Application.Views.SetAxisPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HMI_Application.Views"
      xmlns:VM="clr-namespace:HMI_Application.ViewModels"
      xmlns:Con="clr-namespace:HMI_Application.Control"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance Type=VM:SetAxisVM, IsDesignTimeCreatable=False}"
      Title="SetAxisPage">

    <Page.Resources>
        <Style TargetType="TextBlock" >
            <Setter Property="FontSize" Value="15"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Margin" Value="1"></Setter>
        </Style>

        <Style TargetType="TextBox" >
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Margin" Value="1"></Setter>
        </Style>

        <Style TargetType="Con:NumericalIOField" >
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="Width" Value="100"></Setter>

            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Margin" Value="1"></Setter>
        </Style>

        <Style TargetType="Button" >
            <Setter Property="FontSize" Value="10"></Setter>
            <Setter Property="Height" Value="18"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Margin" Value="1"></Setter>
        </Style>
        <Style TargetType="Con:BitButton" >
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="Width" Value="70"></Setter>
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
            <Setter Property="Margin" Value="1"></Setter>
        </Style>
        <Style TargetType="Con:BitStateShow" >
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="Width" Value="70"></Setter>
          
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="TextAlignment" Value="Center"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>

    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"></ColumnDefinition>
            <ColumnDefinition Width="6*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical"  HorizontalAlignment="Stretch">

            <StackPanel Orientation="Horizontal" Height="30" Margin="1 2">
                <TextBlock Text="轴选择" Width="100"  ></TextBlock>
                <ComboBox VerticalAlignment="Center" FontSize="16"  Width="auto" Margin="3 0" 
                          ItemsSource="{Binding AxisinfoList }" DisplayMemberPath="Name"
                          SelectedIndex="{Binding SelectIndex}">
                
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="30" Margin="1 2">
                <TextBlock Text="自动基准速度" Width="100"  ></TextBlock>
                <Con:NumericalIOField Text="{Binding Datas.Wreal[0].Value,StringFormat={}{0:N3}}"  
                                         Address="{Binding Datas.Wreal[0].Address}" 
                                         Width="100" Margin="3 0">
                    </Con:NumericalIOField>
                <TextBlock Text="{Binding SpeedUnit}"></TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="30" Margin="1 2">
                <TextBlock Text="手动基准速度" Width="100" ></TextBlock>
                <Con:NumericalIOField Text="{Binding Datas.Wreal[1].Value,StringFormat={}{0:N3}}"  
                           Address="{Binding Datas.Wreal[1].Address}" 
                         Width="100" Margin="3 0"></Con:NumericalIOField>
                <TextBlock Text="{Binding SpeedUnit}"></TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="30" Margin="1 2">
                <TextBlock Text="加减速度" Width="100" ></TextBlock>
                <Con:NumericalIOField Text="{Binding Datas.Wreal[3].Value}"  
                         Address="{Binding Datas.Wreal[3].Address}" 
                        Width="100" Margin="3 0"></Con:NumericalIOField>
                <TextBlock Text="ms"></TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="30" Margin="1 2">
                <TextBlock Text="正软限位位置" Width="100" ></TextBlock>
                <Con:NumericalIOField Text="{Binding Datas.Wreal[4].Value,StringFormat={}{0:N3}}"  
                          Address="{Binding Datas.Wreal[4].Address}" 
                        Width="100" Margin="3 0"></Con:NumericalIOField>
                <TextBlock Text="{Binding PosUnit}"></TextBlock>
                <Con:BitButton Content="设置"  Address="{Binding Datas.Wbool[10].Address}" Mode="Set"  Height="25"
                                  ConfirmInformation="以当前位置为正限位"></Con:BitButton>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="30" HorizontalAlignment="Stretch" Margin="1 2">
                <TextBlock Text="负软限位位置" FontSize="15"   Width="100" ></TextBlock>
                <Con:NumericalIOField Text="{Binding Datas.Wreal[5].Value ,StringFormat={}{0:N3}}"  
                        Address="{Binding Datas.Wreal[5].Address}" 
                        Width="100" Margin="3 0"></Con:NumericalIOField>
                <TextBlock Text="{Binding PosUnit}"></TextBlock>
                <Con:BitButton Content="设置"  Address="{Binding Datas.Wbool[11].Address}" Mode="Set"  Height="25"
                  ConfirmInformation="以当前位置为负限位"></Con:BitButton>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="30" Margin="1 2">
                <TextBlock Text="原点偏移值" Width="100" ></TextBlock>
                <Con:NumericalIOField Text="{Binding Datas.Wreal[2].Value,StringFormat={}{0:N3}}"  
                                          Address="{Binding Datas.Wreal[2].Address}" 
                                         Width="100" Margin="3 0"></Con:NumericalIOField>
                <TextBlock Text="{Binding PosUnit}"></TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="30" Margin="1 2">
                <TextBlock Text="软限位" Width="100" ></TextBlock>
                <Con:CheckButton HorizontalAlignment="Center" VerticalAlignment="Center"
                     State="{Binding Datas.Wbool[2].Value}"
                     Address="{Binding Datas.Wbool[2].Address}">
                </Con:CheckButton>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="30" Margin="1 2">
                <TextBlock Text="硬限位" Width="100"></TextBlock>
                <Con:CheckButton HorizontalAlignment="Center" VerticalAlignment="Center"
                                 State="{Binding Datas.Wbool[3].Value}"
                                 Address="{Binding Datas.Wbool[3].Address}">
                </Con:CheckButton>
            </StackPanel>

            <UniformGrid Columns="2" Width="300" HorizontalAlignment="Left">
                <Con:BitButton Content="保存"  HorizontalAlignment="Left" 
                                   Address="{Binding Datas.Wbool[0].Address}"
                                  Mode="Set"
                                  ConfirmInformation="确认写入数据" ></Con:BitButton>
                <Con:BitButton Content="刷新"  HorizontalAlignment="Right" 
                                  Mode="Set"
                                   Address="{Binding Datas.Wbool[1].Address}"></Con:BitButton>
            </UniformGrid>

        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Column="1">
            
            <UniformGrid Columns="2" Width="500" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal" Height="30" Margin="1 2">
                    <TextBlock Text="当前位置:" Width="100"  Margin="1"></TextBlock>
                    <TextBlock Text="{Binding Datas.Rreal[0].Value,StringFormat={}{0:N3}}"  Margin="1" ></TextBlock>
                    <TextBlock Text="{Binding PosUnit}"></TextBlock>
                </StackPanel>

                <Slider VerticalAlignment="Center" HorizontalAlignment="Left" Width="180"
                        Maximum="{Binding Datas.Wreal[4].Value}" 
                        Minimum="{Binding Datas.Wreal[5].Value}"
                        Value="{Binding Datas.Rreal[0].Value}" IsEnabled="False"></Slider>

                <StackPanel Orientation="Horizontal" Height="30" Margin="1 2">
                    <TextBlock Text="当前速度:" Width="100" ></TextBlock>
                    <TextBlock Text="{Binding Datas.Rreal[1].Value,StringFormat={}{0:N3}}"  ></TextBlock>
                    <TextBlock Text="{Binding SpeedUnit}"></TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Height="30" Margin="1 2">
                    <TextBlock Text="当前转矩:" Width="100" ></TextBlock>
                    <TextBlock Text="{Binding Datas.Rreal[2].Value,StringFormat={}{0:N3}}"  ></TextBlock>
                    <TextBlock Text="%"></TextBlock>
                </StackPanel>

                


                <StackPanel Orientation="Horizontal" Height="30" Margin="1 2">
                    <TextBlock Text="设定速度自动:" Width="100" ></TextBlock>
                    <TextBlock Text="{Binding Datas.Rreal[4].Value,StringFormat={}{0:N3}}"  ></TextBlock>
                    <TextBlock Text="{Binding SpeedUnit}"></TextBlock>
                </StackPanel>


                <StackPanel Orientation="Horizontal" Height="30" Margin="1 2">
                    <TextBlock Text="设定速度手动:" Width="100" ></TextBlock>
                    <TextBlock Text="{Binding Datas.Rreal[5].Value,StringFormat={}{0:N3}}"  ></TextBlock>
                    <TextBlock Text="{Binding SpeedUnit}"></TextBlock>
                </StackPanel>
            </UniformGrid>
           

            <StackPanel Orientation="Horizontal" Height="30" Margin="1 2">
                <TextBlock Text="当状状态:" Width="100" ></TextBlock>
                <Con:DeviceStateShow State="{Binding Datas.Rint[0].Value}" Width="100" 
                                     Type="Axis"
                                     FontSize="16" Margin="1"
                                     TextAlignment="Center"
                                     HorizontalAlignment="Center" VerticalAlignment="Center" ></Con:DeviceStateShow>
                
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="30" HorizontalAlignment="Left">
                <Con:BitStateShow State="{Binding Datas.Rbool[1].Value}" TrueText="正硬限位" FalseText="正硬限位" ></Con:BitStateShow>
                <Con:BitStateShow State="{Binding Datas.Rbool[0].Value}" TrueText="正软限位" FalseText="正软限位" ></Con:BitStateShow>
                <Con:BitStateShow State="{Binding Datas.Rbool[2].Value}" TrueText="原点" FalseText="原点" ></Con:BitStateShow>
                <Con:BitStateShow State="{Binding Datas.Rbool[3].Value}" TrueText="负软限位" FalseText="负软限位"></Con:BitStateShow>
                <Con:BitStateShow State="{Binding Datas.Rbool[4].Value}" TrueText="负硬限位" FalseText="负硬限位" ></Con:BitStateShow>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="30" HorizontalAlignment="Left">
                <Con:BitStateShow State="{Binding Datas.Rbool[5].Value}" TrueText="使能完成" FalseText="使能完成" ></Con:BitStateShow>
                <Con:BitStateShow State="{Binding Datas.Rbool[6].Value}" TrueText="运动中" FalseText="运动中" ></Con:BitStateShow>
                <Con:BitStateShow State="{Binding Datas.Rbool[7].Value}" TrueText="故障" FalseText="故障" 
                TrueBackground="Red"></Con:BitStateShow>
            </StackPanel>

            <Border BorderBrush="Black" BorderThickness="1">
            </Border>

            <StackPanel Orientation="Horizontal" Height="40">
                <TextBlock Text="绝对定位位置" Width="100"  FontSize="20"></TextBlock>
                <Con:NumericalIOField Text="{Binding Datas.Wreal[6].Value}"
                                         Address="{Binding Datas.Wreal[6].Address}"
                                         Margin="3 0"></Con:NumericalIOField>
                <TextBlock Text="{Binding PosUnit}"></TextBlock>
                <Con:BitButton  Address="{Binding Datas.Wbool[4].Address}" Content="绝对定位" Mode="Set" 
                                  IsEnabled="{Binding Datas.Rbool[10].Value}"></Con:BitButton>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="40">
                <TextBlock Text="相对定位位置" Width="100"  FontSize="20"></TextBlock>
                <Con:NumericalIOField Text="{Binding Datas.Wreal[7].Value}"
                                          Address="{Binding Datas.Wreal[7].Address}"
                                          Margin="3 0"></Con:NumericalIOField>
                <TextBlock Text="{Binding PosUnit}"></TextBlock>
                <Con:BitButton  Address="{Binding Datas.Wbool[5].Address}" Content="相对定位" Mode="Set"
                                   IsEnabled="{Binding Datas.Rbool[10].Value}"></Con:BitButton>

            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="40" Margin="1 3">
                <Con:BitButton Margin="5 1"  Address="{Binding Datas.Wbool[6].Address}" Content="正向点动" 
                               Mode="PressdownON"
                                   IsEnabled="{Binding Datas.Rbool[10].Value}"></Con:BitButton>
                <Con:BitButton Margin="5 1"  Address="{Binding Datas.Wbool[7].Address}" Content="负向点动" 
                               Mode="PressdownON"
                                   IsEnabled="{Binding Datas.Rbool[10].Value}"></Con:BitButton>
                <Con:BitButton Margin="5 1"  Address="{Binding Datas.Wbool[8].Address}" Content="原点回归" 
                               Mode="Set" ConfirmInformation="根据配置的回零方式启动回零"
                                   IsEnabled="{Binding Datas.Rbool[10].Value}"></Con:BitButton>
                <Con:BitButton Margin="5 1"  Address="{Binding Datas.Wbool[9].Address}" Content="停止" 
                               Mode="PressdownON"></Con:BitButton>
            </StackPanel>
            <TextBlock Text="注释:" HorizontalAlignment="Left" FontSize="15"></TextBlock>
            <TextBlock HorizontalAlignment="Left" FontSize="15" d:Text="以当前位置为零点" Text="{Binding HomeWayDes}" TextWrapping="Wrap">
            </TextBlock>

        </StackPanel>




    </Grid>
</Page>
