<Page x:Class="HMI_Application.Views.MonitorFaultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HMI_Application.Views"
      xmlns:VM="clr-namespace:HMI_Application.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance Type=VM:MonitorFaultVM}"
      Title="MonitorFaultPage">
    <Grid>
        <DataGrid ItemsSource="{Binding CurrentFaults}" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="故障代码" Width="auto" Binding="{Binding Id}"></DataGridTextColumn>
                <DataGridTextColumn Header="触发时间" Width="auto" Binding="{Binding SatrtTime }"></DataGridTextColumn>
                <DataGridTextColumn Header="级别" Width="auto" Binding="{Binding Level}"></DataGridTextColumn>
                <DataGridTextColumn Header="异常描述" Width="*" Binding="{Binding Name}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
</Page>
